<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical" android:paddingBottom="5dp"
android:paddingLeft="10dp"
android:paddingRight="10dp"
android:paddingTop="5dp" tools:context="com.oceanstyxx.pddriver.activity.MainActivity"
android:descendantFocusability="beforeDescendants"
android:focusableInTouchMode="true">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal|center"
        android:paddingTop="70dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="THERE IS NO DRIVE REQUEST ASSIGNED AS OF NOW."
            android:id="@+id/textView2"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#4c4c4c"
            android:gravity="center"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please wait..."
            android:id="@+id/textViewPleaseWait"
            android:textSize="14dp"
            android:textStyle="normal"
            android:textColor="#191919"
            android:gravity="center_horizontal"/>

    </LinearLayout>



    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/ll2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/border"
        >

        <TextView
            android:id="@+id/bookingDetailsHeader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSubHeadingFont"
            android:text="BOOKING DETAILS"
            android:background="@color/colorSubHeading"
            android:textSize="12sp"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:id="@+id/bookingNumberTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/colorBlack"
            android:text="@string/booking_no"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_below="@+id/bookingDetailsHeader"
            android:layout_alignParentLeft="true"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            />

        <TextView
            android:id="@+id/bookingNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:layout_toRightOf="@+id/bookingNumberTitle"
            android:layout_below="@+id/bookingDetailsHeader"
            android:textSize="12sp"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            />

        <TextView
            android:id="@+id/bookingDateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/colorBlack"
            android:text="@string/booking_date"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_below="@+id/bookingNumberTitle"
            android:paddingTop="10dp"
            android:paddingLeft="5dp"
            />

        <TextView
            android:id="@+id/bookingDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/bookingDateTitle"
            android:layout_below="@+id/bookingNumber"
            android:paddingTop="10dp"
            android:paddingLeft="8dp"
            />

        <TextView
            android:id="@+id/bookingFromPubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:text="@string/booking_from_pub"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_below="@+id/bookingDateTitle"
            android:paddingTop="10dp"
            android:paddingLeft="5dp"
            />

        <TextView
            android:id="@+id/bookingFromPub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:layout_toRightOf="@+id/bookingFromPubTitle"
            android:layout_below="@+id/bookingDate"
            android:textSize="12sp"
            android:paddingLeft="8dp"
            android:paddingTop="10dp"
            />

        <TextView
            android:id="@+id/bookingFromTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:text="@string/booking_from"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_below="@+id/bookingFromPubTitle"
            android:paddingTop="10dp"
            android:paddingLeft="5dp"
            />

        <TextView
            android:id="@+id/bookingFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:layout_toRightOf="@+id/bookingFromTitle"
            android:layout_below="@+id/bookingFromPub"
            android:textSize="12sp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlcustomer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/border"
        >

        <TextView
            android:id="@+id/customerDetailsHeader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSubHeadingFont"
            android:text="CUSTOMER DETAILS"
            android:background="@color/colorSubHeading"
            android:textSize="12sp"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:id="@+id/customerNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/colorBlack"
            android:text="Name"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/customerDetailsHeader"
            android:paddingLeft="5dp"
            />

        <TextView
            android:id="@+id/customerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:layout_toRightOf="@+id/customerNameTitle"
            android:textSize="12sp"
            android:paddingLeft="8dp"
            android:layout_below="@+id/customerDetailsHeader"
            />

        <TextView
            android:id="@+id/customerPhoneTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/colorBlack"
            android:text="Phone"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/customerNameTitle"
            android:paddingLeft="5dp"
            />

        <TextView
            android:id="@+id/customerPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:layout_toRightOf="@+id/customerNameTitle"
            android:layout_below="@+id/customerName"
            android:textSize="12sp"
            android:paddingLeft="8dp"
            />

        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/border"
        >

        <TextView
            android:id="@+id/driveDetailsHeader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSubHeadingFont"
            android:text="DRIVE DETAILS"
            android:background="@color/colorSubHeading"
            android:textSize="12sp"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            />

        <TextView
            android:id="@+id/bookingTravelTimeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/colorBlack"
            android:text="@string/booking_travel_time"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_below="@+id/driveDetailsHeader"
            />

        <TextView
            android:id="@+id/bookingTravelTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:layout_toRightOf="@+id/bookingTravelTimeTitle"
            android:textSize="12sp"
            android:paddingLeft="8dp"
            android:visibility="gone"
            android:layout_below="@+id/driveDetailsHeader"
            />

        <TextView
            android:id="@+id/bookingStartTimeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/colorBlack"
            android:text="@string/booking_start_time"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_below="@+id/bookingTravelTimeTitle"
            android:visibility="gone"
            android:paddingTop="10dp"
            />

        <TextView
            android:id="@+id/bookingStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:layout_toRightOf="@+id/bookingStartTimeTitle"
            android:layout_below="@+id/bookingTravelTimeTitle"
            android:textSize="12sp"
            android:paddingLeft="8dp"
            android:visibility="gone"
            android:paddingTop="10dp"
            />

        <TextView
            android:id="@+id/bookingEndTimeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/colorBlack"
            android:text="@string/booking_end_time"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_below="@+id/bookingStartTimeTitle"
            android:visibility="gone"
            android:paddingTop="10dp"
            />

        <TextView
            android:id="@+id/bookingEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:layout_toRightOf="@+id/bookingEndTimeTitle"
            android:layout_below="@+id/bookingStartTime"
            android:textSize="12sp"
            android:paddingLeft="8dp"
            android:visibility="gone"
            android:paddingTop="10dp"
            />

        <TextView
            android:id="@+id/bookingTotalTravelTimeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/colorBlack"
            android:text="@string/booking_total_travel_time"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_below="@+id/bookingEndTimeTitle"
            android:paddingTop="10dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/bookingTotalTravelTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:layout_toRightOf="@+id/bookingTotalTravelTimeTitle"
            android:layout_below="@+id/bookingEndTime"
            android:textSize="12sp"
            android:visibility="gone"
            android:paddingTop="10dp"
            android:paddingLeft="8dp"
            />

    </RelativeLayout>



        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:id="@+id/ll3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/billDetailsHeader"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorSubHeadingFont"
                    android:text="BILL DETAILS"
                    android:background="@color/colorSubHeading"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"

                    />
        <TableLayout
            android:id="@+id/tableInvoices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            >
        </TableLayout>

                <RelativeLayout
                    android:id="@+id/ll6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_alignParentBottom="true"
                    >
                    <TextView
                        android:id="@+id/bookingTotalTitle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp"
                        android:paddingBottom="5dp"
                        android:text="Total :"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:paddingTop="10dp"
                        />
                    <TextView
                        android:id="@+id/bookingTotal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorText2"
                        android:textSize="20sp"
                        android:gravity="right"
                        android:paddingBottom="5dp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:paddingTop="10dp"
                        />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
</LinearLayout>
</ScrollView>

    <LinearLayout
        android:id="@+id/llbutton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:id="@+id/btnAction"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:textSize="17sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:background="@color/colorButton1"
            android:textColor="@color/colorWhite"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            />

    </LinearLayout>
    </RelativeLayout>
